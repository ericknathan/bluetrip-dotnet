@{
    ViewData["Title"] = "Agendamentos";
}

@model List<AgendamentoModel>

<h2>Agendamentos</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Data</th>
            <th>Quantidade de pessoas</th>
            <th>Evento</th>
            <th>Turista</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var agendamento in Model)
        {
            <tr>
                <td>@agendamento.EventoId</td>
                <td>@agendamento.Data</td>
                <td>@agendamento.QuantidadePessoas</td>
                <td>@agendamento.EventoId</td>
                <td>@agendamento.TuristaId</td>
                <td>
                    <a asp-controller="Agendamento" asp-action="Edit" asp-route-ID="@agendamento.AgendamentoId">Editar</a>
                    <a asp-controller="Agendamento" asp-action="Delete" asp-route-ID="@agendamento.AgendamentoId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Agendamento" asp-action="Create">Novo agendamento</a>